<script>
  // CSRF setup for fetch
  function getCookie(name) {
      let cookieValue = null;
      if (document.cookie && document.cookie !== '') {
          const cookies = document.cookie.split(';');
          for (let i = 0; i < cookies.length; i++) {
              const cookie = cookies[i].trim();
              if (cookie.substring(0, name.length + 1) === (name + '=')) {
                  cookieValue = decodeURIComponent(cookie.substring(name.length + 1));
                  break;
              }
          }
      }
      return cookieValue;
  }
  const csrftoken = getCookie('csrftoken');

  // timer logic
  let defaultMinutes = 25;
  let secondsLeft = defaultMinutes * 60;
  let timerInterval = null;
  let currentSessionId = null;
  function formatTime(s) {
    const mm = String(Math.floor(s/60)).padStart(2,'0');
    const ss = String(s%60).padStart(2,'0');
    return `${mm}:${ss}`;
  }
  function updateDisplay(){ document.getElementById('timer-display').innerText = formatTime(secondsLeft); }

  document.getElementById('start-btn').addEventListener('click', async () => {
    if (timerInterval) return;
    timerInterval = setInterval(()=> {
      if (secondsLeft <= 0) { clearInterval(timerInterval); timerInterval = null; return; }
      secondsLeft -= 1;
      updateDisplay();
    }, 1000);

    // start session on server (if a task selected)
    const selected = document.querySelector('.task input[type=checkbox]:not(:checked)');
    let taskEl = document.querySelector('.task[data-selected="true"]');
    let taskId = taskEl ? taskEl.getAttribute('data-id') : null;

    const resp = await fetch("{% url 'UserAuth:start_session' %}", {
      method: 'POST',
      headers: {'Content-Type':'application/json', 'X-CSRFToken': csrftoken},
      body: JSON.stringify({task_id: taskId})
    });
    const data = await resp.json();
    currentSessionId = data.session_id;
  });

  document.getElementById('pause-btn').addEventListener('click', () => {
    if (timerInterval) { clearInterval(timerInterval); timerInterval = null; }
  });

  // .getElementById('end-btn').addEventListener('click', async () => {
  //   if (timerInterval) { clearInterval(timerInterval); timerInterval = null; }
  //   if (currentSessionId) {
  //     await fetch(`/end-session/${currentSessionId}/`, {
  //       method: 'POST',
  //       headers: {'X-CSRFToken': csrftoken}
  //     });
  //     currentSessionId = documentnull;
  //   }
  //   secondsLeft = defaultMinutes * 60;
  //   updateDisplay();
  //   location.reload(); // quick state update; replace later with AJAX updates
  // });

  // task toggle & selection
  document.querySelectorAll('.task-check').forEach(cb => {
    cb.addEventListener('change', async (e)=>{
      const taskEl = e.target.closest('.task');
      const taskId = taskEl.getAttribute('data-id');
      await fetch(`toggle-task/${taskId}/`, {
        method: 'POST', headers: {'X-CSRFToken': csrftoken}
      });
      location.reload();
    });
  });

  // delete btn
  document.querySelectorAll('.del-btn').forEach(btn => {
    btn.addEventListener('click', async (e)=>{
      const id = e.currentTarget.getAttribute('data-id');
      if (!confirm('Delete task?')) return;
      const resp = await fetch(`delete-task/${id}/`, {method:'POST', headers: {'X-CSRFToken': csrftoken}});
      location.reload();
    });
  });

  // select a task for focus (click the task -> toggles selected styling)
  document.querySelectorAll('.task').forEach(task => {
    task.addEventListener('click', (e)=>{
      if(e.target.tagName.toLowerCase() === 'input' || e.target.classList.contains('del-btn')) return;
      document.querySelectorAll('.task').forEach(t => t.removeAttribute('data-selected'));
      task.setAttribute('data-selected','true');
    });
  });

  // reflection save (local demo)
  document.getElementById('save-reflection').addEventListener('click', ()=>{
    alert('Reflection saved locally (demo). Build backend route to persist reflections.');
  });

  // reset timer
  document.getElementById('reset-timer').addEventListener('click', ()=>{
    secondsLeft = defaultMinutes * 60; updateDisplay();
  });

  updateDisplay();
</script>

</body>
</html>


